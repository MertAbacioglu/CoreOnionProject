@model CategoryPageVM
@{
    ViewData["Title"] = "CategoryList";
}

<h1>CategoryList</h1>
@if (Model.Categories.Count == 0)
{
    <div class="jumbotron">
        There is no category has been added...
        <a asp-action="AddCategory" asp-controller="Category">Click</a>  to add new Category
    </div>

}
<div class="panel panel-primary">
    <div class="panel panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Category Description</th>
                    <th>Options</th>
                </tr>
            </thead>

            <tbody>
                @foreach (Category item in Model.Categories)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td>Update-Delete Operations</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

