@model CategoryPageVM


<h1>AddCategory</h1>

@TempData["message"]

<form asp-action="AddCategory" asp-controller="Category" method="post">
    <div>
        <input type="text" asp-for="Category.CategoryName" placeholder="Category Name"/>
    </div>

    <div>
        <input type="text" asp-for="Category.Description" placeholder="Category Description" />
    </div>

    <div>
        <button class="btn btn-primary">Add</button>
    </div>
</form>
